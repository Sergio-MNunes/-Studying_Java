
public class CondicionaisEBoolean {
	public static void main(String[] args) {
		int idade = 4;
		
		if (idade >= 18) {
			System.out.println("Você é maior de idade.");
		} else if (idade <= 5) {
			System.out.println("Você é um bostinha.");
		} else {
			System.out.println("Você é menor de idade.");
		}
	}
}
